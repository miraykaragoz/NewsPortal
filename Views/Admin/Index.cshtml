@model List<News>

@{
    ViewBag.Title = "Admin Paneli";
}

<nav>
    <a style="text-decoration: none" href="/admin/create">Haber Ekle</a>
</nav>

<h2>Haberler</h2>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Başlık</th>
            <th scope="col">Eklenme tarihi</th>
            <th scope="col">Günncellenme tarihi</th>
            <th scope="col">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var news in Model)
        {
            <tr>
                <td>@news.Title</td>
                <td>@news.CreatedDate.ToString("dd.MM.yyyy hh:mm")</td>
                <td>@news.UpdatedDate.ToString("dd.MM.yyyy hh:mm")</td>
                <td>
                    <a href="/admin/update/@news.Id" class="btn btn-primary">Güncelle</a>
                    <a href="/admin/delete/@news.Id" onclick="return confirm('Emin misiniz?')" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    nav {
        background-color: black; /* Arka plan rengi */
        padding: 10px; /* İç boşluk */
        text-align: center; /* Ortalamak için */
    }

        nav a {
            color: #fff; /* Yazı rengi */
            font-size: 18px; /* Yazı boyutu */
            padding: 10px 20px; /* İç boşluk */
            transition: background-color 0.3s, color 0.3s; /* Geçiş efekti */
        }

            nav a:hover {
                background-color: grey; /* Hover rengi */
                color: white; /* Hover'da yazı rengi */
            }

</style>