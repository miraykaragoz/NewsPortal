@{
    ViewBag.Title = "Haber Ekle";
}

<h2 class="mb-4">Haber Ekle</h2>
<form class="row g-3" method="post" enctype="multipart/form-data" autocomplete="off">
    <div class="mb-3">
        <label class="form-label">Başlık</label>
        <input required type="text" class="form-control" name="Title">
    </div>
    <div class="mb-3">
        <label for="formGroupExampleInput2" class="form-label">Özet</label>
        <input required type="text" class="form-control" name="Summary">
    </div>
    <div class="mb-3">
        <label for="formGroupExampleInput2" class="form-label">Detay</label>
        <input required type="text" class="form-control" name="Detail">
    </div>
    <input required type="file" name="Img" id="file" accept="image/png, image/jpeg" />
    <button class="btn btn-success">Ekle</button>
</form>